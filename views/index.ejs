<!-- TODO list-->
<div class="todo">
   <div id="todo-table">
     <div class="show-todo"> 
      <h1>Today's Meet List</h1>
      <ul>
      <% for(var i=0; i<d.length; i++){ %>
        <li>
          <h2>Task <%= i+1 %></h2>
        <div class="meet-con">
          <p>Name: <b><%= d[i].name %></b></p>
          <p>Email: <b><%= d[i].email %></b></p>
          <p>Time: <b><%= d[i].time %></b></p>
          <p>Reason: <b><%= d[i].description %></b></p>
        </div>
        </li>
      <% } %>
      </ul>
     </div>
   </div>


   <br>
   <div id="todo-table">
    <div class="add-todo">
      <form method="POST" action="/">
        <p>Which Date</p><input type="number" name="date" id="">
        <p>Your Name</p><input type="text" name="yourname" placeholder="Your Name..." required>
        <p>Your Email</p><input type="text" name="youremail" placeholder="Your Email..." required>
        <p>Time</p><input type="text" name="starttime" placeholder="9 AM - 10PM" required>
        <p>Meeting Description</p><input type="text" name="reason" id="" placeholder="Meeting Description" required>
        <br><br>
        <button type="submit" style="float: right;">Add to Slot</button>
      </form>
    </div>
    
   </div>
</div>
<br><br><br>
